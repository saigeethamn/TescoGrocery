<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tesco.grocery.view" android:versionCode="6"
	
	android:versionName="3.04" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="5" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>

	<application android:label="@string/app_name" android:icon="@drawable/icon"
		android:theme="@style/TabStyle.NoShadow">
		<activity android:label="@string/app_name" android:name="TGLoginScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="TGTestActivity"></activity>

		<activity android:name="TGHomeScreen" android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden">
		</activity>

		<activity android:name="TGConstructionScreen"
			android:windowSoftInputMode="stateHidden" android:configChanges="orientation|keyboardHidden"></activity>

		<activity android:name="TGDeliverySlotScreen"
			android:windowSoftInputMode="stateHidden" android:configChanges="orientation|keyboardHidden">
		</activity>
		<activity android:name="CustomTabViewField">
		</activity>
		<activity android:name="TGExpandableListScreen"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGFavouriteScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGProductScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGProductDetailScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGOfferScreen"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGSuperDeptScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGDepartmentScreen"
			android:windowSoftInputMode="stateHidden" android:configChanges="orientation|keyboardHidden"></activity>

		<activity android:name="TGShopShelfScreen"
			android:windowSoftInputMode="stateHidden" android:configChanges="orientation|keyboardHidden"></activity>

		<activity android:name="TGBasketListScreen"
			android:windowSoftInputMode="stateHidden" android:configChanges="orientation|keyboardHidden"></activity>

		<activity android:name="TGCheckoutScreen"
			android:configChanges="orientation|keyboardHidden" ></activity>

		<activity android:name="TGSearchActivity"
			android:configChanges="orientation|keyboardHidden" 
			android:windowSoftInputMode="stateVisible" >
			<!-- android:theme="@style/Theme.Translucent" -->
		</activity>
		<!-- android:theme="@android:style/Theme.Translucent" -->
		<activity android:name="TGSearchResultsScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>

		<activity android:name="TGEmptyActivity" android:theme="@style/Theme.Transparent"
			android:configChanges="orientation|keyboardHidden"></activity>

		<activity android:name="TGPendingOrderScreen"
			android:configChanges="orientation|keyboardHidden"
			android:windowSoftInputMode="stateHidden"></activity>


		<activity android:name="TGOfferScreen"
		android:configChanges="orientation|keyboardHidden"
		android:windowSoftInputMode="stateHidden"></activity>
		<activity android:name="TGScannerScreen"></activity>

		<receiver android:name=".TGShoppinglistWidget"
			android:label="@string/shopping_list_widget_lbl">
            <intent-filter>
            	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="android.intent.action.CONFIGURATION_CHANGED" />
            </intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/shoppinglist_widget_provider" />
      	</receiver>
      
      	<receiver android:name=".TGSearchWidget"
			android:label="@string/search_widget_lbl">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/search_widget_provider" />
		</receiver>
      	
      	<activity android:name="TGWidgetPopup" android:theme="@style/Theme.Translucent"
      	android:screenOrientation="portrait"
      	android:launchMode="singleInstance"
      	android:noHistory="true"
      	android:windowSoftInputMode="stateVisible"
      	>
      	</activity>
      	<activity android:name="TGLastOrderScreen"
      	android:configChanges="orientation|keyboardHidden"
		android:windowSoftInputMode="stateHidden"></activity>
      
	</application>
</manifest>